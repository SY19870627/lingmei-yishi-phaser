{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AnchorList",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "id",
      "地點",
      "條件",
      "mapId"
    ],
    "properties": {
      "id": {
        "type": "string"
      },
      "地點": {
        "type": "string"
      },
      "條件": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "mapId": {
        "type": "string"
      },
      "完成後": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "裝飾": {
            "type": "string"
          },
          "回聲腳本": {
            "type": "string"
          }
        }
      }
    }
  }
}
